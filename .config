#!/bin/bash

# Farben definieren
YELLOW="\e[1;93m"
RED="\e[0;31m"
NC="\e[0m" # No Color

# Fensterbreite abfragen
COLUMNS=$(tput cols)

# Pfad zur benutzerdefinierten Logo-Datei
CUSTOM_LOGO_FILE="custom_logo.txt"

# Großes Logo
big_logo=$(cat << "EOF"
...............'.............. 
...............':c;'.......... 
.........''......'lkd:'....... 
.......,d0000Od,...'l0Ol'..... 
.....;x00000x:.......,k00c.... 
...:x0000000k:........'k00d... 
...;x000o;d000kc'......,000l.. 
.....;l'...,o000Ol'.....k00x.. 
.............'lO00Ol'..;000o.. 
........'''....'lO000oc000O'.. 
.....'xO000dc,'..'o000000d'... 
..'cx00Odcx00000000000000x;... 
.l0000d'...';lodxddlc,;x000k:. 
,000d;..................,d00O. 
.':'......................,:'. 
EOF
)

# Kleines Logo
small_logo=$(cat << "EOF"
 ☭
EOF
)

# Infos sammeln
os=$(lsb_release -d | cut -f2-)
song=$(playerctl metadata --format "{{artist}} - {{title}}" 2>/dev/null || echo "Nothing Playing")
birthday="29 September 2008"
cpu=$(grep -m1 "model name" /proc/cpuinfo | cut -d ':' -f2 | sed 's/^[ \t]*//')
gpu=$(lspci | grep -i 'vga\|3d' | cut -d ':' -f3-)
quote=$(shuf -n1 -e \
    "„Religion ist das Opium des Volkes. – Karl Marx“" \
    "„Die Philosophen haben die Welt nur verschieden interpretiert; es kommt aber darauf an, sie zu verändern. – Marx“" \
    "„Ein Schritt wirklicher Bewegung ist mehr wert als ein Dutzend Programme. – Marx“" \
    "„Proletarier aller Länder, vereinigt euch! – Marx“" \
)

# Wenn die benutzerdefinierte Logo-Datei existiert, benutze sie, ansonsten das Standardlogo
if [ -f "$CUSTOM_LOGO_FILE" ]; then
    logo=$(cat "$CUSTOM_LOGO_FILE")
else
    # Logo-Ausgabe abhängig von der Fensterbreite
    if [ "$COLUMNS" -lt 80 ]; then
        logo="$small_logo"
    else
        logo="$big_logo"
    fi
fi

# Ausgabe des Logos
echo -e "${RED}$logo${NC}"

# Banner mit Text
echo -e "${YELLOW}╔═════════════════════════╗${NC}"
echo -e "${YELLOW}║     ${RED}☭ ${YELLOW}Night_Abra ${RED}☭ ${YELLOW}     ║${NC}"
echo -e "${YELLOW}╚═════════════════════════╝${NC}"

# Infos ausgeben
echo -e "${YELLOW}OS:${NC}       $os"
echo -e "${YELLOW}Song:${NC}     $song"
echo -e "${YELLOW}Birthday:${NC} $birthday"
echo -e "${YELLOW}CPU:${NC}      $cpu"
echo -e "${YELLOW}GPU:${NC}      $gpu"
echo
echo -e "${RED}$quote${NC}"
